<h1> Order </h1>

<form id='add_order' method='POST'>

<ul id='main_list'>
    {{#each ingredients}}
  <li id={{this._id}} name='{{this.amount}}' title='{{this.price}}' class='ingredient'>
    {{this.name}}: ${{this.price}} 
  </li>
    {{/each}}
</ul>

Price: $<span id='price'>0.00</span> <input type="submit" id='submitter' value='Order' method='POST'\>
</form>

<h1 id='status'></h1>

<script type='text/javascript'>
INGREDIENTS = {}
{{#each ingredients}}
INGREDIENTS['{{this._id}}'] = {name:'{{this.name}}', price:'{{this.price}}', amount:'{{this.amount}}' };
{{/each}}
</script>
<script type='text/javascript' src='javascripts/order.js'></script>
